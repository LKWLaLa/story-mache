<section class="margin-bottom">
    <div class="row">
        <div class="column_12">
            <h5 class="text italic inline padding-top">“The adventures first, explanations take such a dreadful time.” -Lewis Carroll</h5>

            <div class="inline on-right padding-top padding-bottom">

                <span class="icon search"></span> 

                <input ng-model="stories.search" class="button secondary small text bold" placeholder="Search"></input>
                <br><br>

            </div><!--search-->            
        </div><!--column-->
    </div><!--row 1-->

    <div class="row">

        <ul ng-repeat="story in stories.data | filter: stories.search">   
            <li class="column_3">
              <div class="bck light text center padding-top padding-bottom">{{story.title}}</div><br>
            </li>
        <ul> 

    </div><!--row 2-->
</section>