<trees-header></trees-header>

<main-nav></main-nav>


<section class="margin-bottom">
    <div class="row">
        <div class="column_12">
            

        <span class="column_2 padding-top" id="sortBy">
            <select ng-model="sortBy">
                <option value="">-- Order stories by --</option>
                <option value="updated_at">Most recently updated</option>
                <option value="total_contributions">Most contributions</option>
            </select>
        </span>


            <div class="inline on-right padding-top padding-bottom">

                <span class="icon search"></span> 

                <input ng-model="stories.search" class="button secondary small text bold" placeholder="Search"></input>
                <br><br>

            </div><!--search-->            
        </div><!--column-->
    </div><!--row 1-->

    <div class="row">

        <ul ng-repeat="story in stories.data | filter: stories.search | selectedOrder:sortBy:true">   
            <li class="column_3">
                <a ui-sref="story({ id: story.id })">
                  <div class="bck light text center padding-top padding-bottom">{{story.title}}</div><br>
                </a>
            </li>
        <ul> 

    </div><!--row 2-->
</section>